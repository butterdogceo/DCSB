<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ControlAlternateBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FFCCCCCC"/>
    
    <!-- Foreground Colors -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#FF888888"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#FF1C97EA"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#FF005A9E"/>
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFE1E1E1"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFD0D0D0"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#FF007ACC"/>
    
    <!-- Light theme uses default WPF styles, so we keep this minimal -->
    
</ResourceDictionary>
